{
  "name": "full-jietu",
  "version": "0.1",
  "manifest_version": 2,
  "description": "full-jietu",
  "icons": { "128": "icon.png" },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*", 
    "https://*/*",
    "file:///*/*"],
    "web_accessible_resources":["icon.png", "iframe.html"],
  "content_scripts": [
    {
      "css": ["css/index.css"],
      "js": ["js/jquery.js", "js/content.js"],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*/*"
      ]
    }
  ],
  "browser_action": {
    "default_title": "",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  }
}